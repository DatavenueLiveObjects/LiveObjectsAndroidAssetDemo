<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Card Style -->
    <style name="card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="card_item_separator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/panel_stroke</item>
        <item name="android:background">@color/card_stroke</item>
    </style>

    <style name="card_vertical_layout">
        <item name="android:padding">@dimen/card_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="card_title">
        <item name="android:fontFamily">sans-serif-light</item>     <!-- Chg de fonte -->
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="card_title_switch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">right|center</item>
    </style>

    <style name="card_generic">
        <item name="android:paddingRight">@dimen/panel_item_padding</item>
        <item name="android:paddingLeft">@dimen/panel_item_padding</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="card_subtitle" parent="card_generic">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">sans-serif-light</item>     <!-- Chg de fonte -->
    </style>

    <style name="card_horizontal_layout" parent="card_generic">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">8</item>
    </style>

    <!--Card Sub Items-->
    <style name="card_subitem_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>

    </style>

    <style name="card_subitem_button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>     <!-- Chg de fonte -->
    </style>

    <style name="card_subitem_title_bold" parent="card_subitem_title">
        <item name="android:layout_weight">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>     <!-- Chg de fonte -->
    </style>

    <style name="card_subitem_telemetry_imageview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="card_subitem_telemetry_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">right</item>
        <item name="android:fontFamily">sans-serif-light</item>     <!-- Chg de fonte -->

    </style>

    <style name="card_subitem_telemetry_seekbar" parent="@style/my_seekbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="card_item_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="card_subitem_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
    </style>
    <style name="card_subitem_value_primary_dark" parent="card_subitem_value">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>     <!-- Chg de fonte -->
    </style>

    <style name="card_button_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/panel_item_padding</item>
    </style>

    <style name="card_subitem_spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
    </style>

    <!--Other Views-->
    <style name="my_seekbar">
        <item name="android:progressDrawable">
            @drawable/orangetheme_scrubber_progress</item>
        <item name="android:thumb">
            @drawable/orangetheme_scrubber_control</item>
    </style>

    <style name="button_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/button_bg</item>-->
    </style>


    <!--<style name="MySwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">-->
    <style name="MySwitchCompat">
        <!-- active thumb & track color -->
        <item name="colorControlActivated">@color/colorPrimaryBlue</item>
    </style>


    <style name="spinner_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textColor">@drawable/normal_text</item>
        <item name="android:fontFamily">sans-serif-light</item>     <!-- Chg de fonte -->
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:fontFamily">sans-serif-light</item>  <!-- Chg de fonte -->

        <!--<item name="android:textAllCaps">false</item>-->
    </style>


    <style name="MyButtonAlertStyle" parent="MyButtonStyle">
        <item name="colorButtonNormal">@color/red</item>
    </style>

    <style name="card_footer_title_bold">
        <!--<item name="android:gravity">center_vertical</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">sans-serif-light</item>     <!-- Chg de fonte -->
    </style>

    <style name="card_title_right" parent="card_title">
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>     <!-- Chg de fonte -->
    </style>

</resources>
